<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Checkin #<%= @checkin.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/checkins" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/checkins/<%= @checkin.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit checkin
        </a>
      </div>

      <div class="col">
        <a href="/delete_checkin/<%= @checkin.id %>" class="btn btn-block btn-outline-secondary">
          Delete checkin
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @checkin.description %>
      </dd>

      <dt>
        Lat
      </dt>
      <dd>
        <%= @checkin.lat %>
      </dd>

      <dt>
        Lng
      </dt>
      <dd>
        <%= @checkin.lng %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@checkin.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@checkin.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

