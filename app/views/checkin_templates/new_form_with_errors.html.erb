<!-- Validation failure messages -->
<% if @checkin.present? %>
  <% if @checkin.errors.any? %>
    <% @checkin.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new checkin
</h1>


<hr>

<form action="/create_checkin" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @checkin.description %>">
  </div>

  <div class="form-group">
    <label for="lat">
      Lat
    </label>

    <input type="text" id="lat" name="lat" class="form-control" value="<%= @checkin.lat %>">
  </div>

  <div class="form-group">
    <label for="lng">
      Lng
    </label>

    <input type="text" id="lng" name="lng" class="form-control" value="<%= @checkin.lng %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create checkin
  </button>
</form>

<hr>

<a href="/checkins">
  Go back
</a>
